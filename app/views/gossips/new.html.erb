<html>
<head>
	<title>Bienvenue sur The Gossip Project</title>
</head>
<body>
	<h1>Créer un potin! </h1><br>
	<%= form_for @gossip do |f| %> 
	<div class="form-group">
		<label>Titre du gossip</label>
		<%= f.text_field :title, class: 'form-control'%> 
	</div>
	<div class="form-group">
		<label>Contenu du gossip</label>
		<%= f.text_area :content, class: 'form-control'%> 
	</div>
	<div class="form-group">
		<button type="submit", class="btn btn-primary">Créer le gossip</button>
	</div>
	<% end %>
</body>
</html>

